
	<% @posts.each do |post| %> 
	<article>	
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                	
             		<h2><%= link_to post.title %></h2> 
                    <h5><%= post.created_at.to_date.strftime("%m/%d/%Y") %></h5></br> 
					<hr>
					<p><%= post.body.truncate(250)%><%= link_to "read more", myblog_path(post.id)%></p>
					<h5>By:<%= post.author%></h5>
                    <% if me_signed_in? %>
                    <h5> <%= link_to "Edit", edit_path(post.id) %> ||

                    <%= link_to "Delete", destroy_path(post.id), method: :delete, data:{ deletable: true} %></h5>
                    <%end %>
                    <hr>
                </div>
            </div>
        </div>
        
    </article>
    <% end %>
   