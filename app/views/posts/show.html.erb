<article>   
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    
                    <h1><%= @post.title %>></h1>
                    <h6><%= link_to "Edit", edit_post_path %> ||

					<%= link_to "Delete", delete_path(@post), method: :delete, data:{ deletable: true} %></h6>
                    <%= image_tag (@post.image.url :medium) %></br>
					<p> <%= @post.body %></p>
					<h6>By: <%= @post.author %></h6>
					
					<hr>
                    <hr>
                </div>
            </div>
        </div>

        
 </article>
